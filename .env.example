# Environment Configuration for Attendance Management System

# Server Configuration
NODE_ENV=production
PORT=3000

# Security
SESSION_SECRET=your-super-secure-session-secret-key-here-change-this-in-production

# Database Configuration (for production)
# Heroku PostgreSQL (recommended - FREE with 10,000 rows)
# DATABASE_URL=postgres://username:password@hostname:port/database_name

# Railway PostgreSQL
# DATABASE_URL=postgresql://postgres:password@hostname:port/railway

# Local PostgreSQL
# DATABASE_URL=postgres://username:password@localhost:5432/attendance_system

# SQLite (current - works for development)
DATABASE_PATH=./data/attendance.db

# Redis Configuration (optional - for session storage)
# REDIS_URL=redis://username:password@hostname:port

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# HTTPS Configuration (for production)
HTTPS=true

# Admin Configuration
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=change-this-secure-password

# Application Settings
APP_NAME=Attendance Management System
APP_VERSION=1.0.0